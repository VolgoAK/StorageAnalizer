<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cards_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_overview_item"
            style="@style/ItemText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_title_overview" />

        <TextView
            android:id="@+id/tv_count_overview_item"
            style="@style/ItemText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_description_overview"/>

        <TextView
            android:id="@+id/tv_size_overview_item"
            style="@style/ItemText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_description_overview"/>
    </LinearLayout>

</android.support.v7.widget.CardView>