<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cards_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_category_item"
            style="@style/ItemText"
            android:textSize="@dimen/text_size_title_category"/>

        <TextView
            android:id="@+id/tv_count_category_item"
            style="@style/ItemText"
            android:textSize="@dimen/text_size_description_category"/>

        <TextView
            android:id="@+id/tv_size_category_item"
            style="@style/ItemText"
            android:textSize="@dimen/text_size_description_category"/>
    </LinearLayout>

</android.support.v7.widget.CardView>